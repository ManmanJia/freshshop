<h1>Your Cart</h1>

<% if @cart.empty? %>
<p>Your cart is currently empty</p>
<% else%>

<%= link_to "Empty Your Cart", cart_clear_path, class: "btn btn-default" %>
<%end%>
</br></br></br>
<% total =0%>
<table  class ="table table-hover">
	<tr>
		<th id="image_col"> Image </th>
		<th id="name_col"> Name </th>
		<th id="price_col"> Price </th>
		<th id="quantity_col"> Quantity </th>
		
    </tr>
	<% @cart.each do |id, quantity| %>
	<tr>
	   <% product =Product.find_by_id(id) %>
	   <td>
	   	<%= image_tag product.image.url(:medium) %>
	   	  
	   	  </td>


	   <td>
	   	  <%= link_to product.name, product %>
	   	  </td>
	   	  <td><%= number_to_currency(product.price, :unit => '€') %>
	   	  </td>
	   	<td> <%= quantity%>
	   	  </td>

	   	
     <td><% total += quantity *product.price %></td>

     
    <%end%>
    </tr>
    </table>
</br>
    <p><b>TOTAL: <%= number_to_currency(total, :unit => '€')%></b>
    </p>
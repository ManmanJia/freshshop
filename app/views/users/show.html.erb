<% provide(:title, @user.name) %>
    
<div class="row">
      <aside class="col-md-6">
        <section class="user_info">
<p id="notice"><%= notice %></p>

<h1>
  <%= gravatar_for @user %>
</h1>

<h1>Name:<%= @user.name %></h1>
<br>
<h1>Email:<%= @user.email %></h1>
</section>
</aside>

      <div class="col-md-8">
        <% if @user.orders.any? %>
          <h3>Orders History(<%= @user.orders.count %>)</h3>
          
          <ol class="blogs">
     <table class ="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th>TotalPrice</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.phonenumber %></td>
        <td class="order_price"><%= number_to_currency(order.total_price,:unit => 'â‚¬') %></td> 
        <td><%= link_to 'Show', order %></td>
        
        
        </tr>
         <% end %>
   </tbody>
</table>
 </ol>
  <% end %>
 </div>
</div>

<%= link_to 'Edit your account', edit_user_path(@user) %> |

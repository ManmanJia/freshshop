
            
<% @products.each_slice(3) do |products| %>
<div class="row "  >
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="product">
          <div class="image_wrapper">
          <%= link_to (image_tag product.image.url(:medium)),product%> 
        </div>
         
          <h2>
            <%= link_to product.name, product %>
          </h2>
          
          <td><a href="/cart/<%= product.id%>">Add to cart </a></td>
        
       </div>
      </div
        <% end %>
      </div>
      <% end %>
      

     
    
   
 
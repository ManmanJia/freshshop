
<% @products.each_slice(3) do |products| %>
  <div class="row">
    <% products.each do |product| %>
      <div class="col-md-4">
        <div class="product">
          <div class="image_wrapper">
            <%= link_to product do %>
              <%= image_tag product.image.url(:medium) %>
            <% end %>
          </div>
          <h2>
            <%= link_to product.name, product %>
            </h2>
            
          
        </div>
      </div>
    <% end %>
  </div>
<% end %>

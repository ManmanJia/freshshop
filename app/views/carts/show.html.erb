<h2><div class="cart_title">Your Cart</div>  </h2>


<%= button_to 'Empty cart', @cart, :method => :delete,  
    :confirm => 'Are you sure?' %>  
 

<table class ="table table-hover"> 
<tr>
    <th id="image_col"> Image </th>
    <th id="name_col"> Name </th>
    <th id="quantity_col"> Quantity </th>
    <th id="price_col"> Price </th>
    
    
    </tr> 
  <% @cart.line_items.each do |item| %>  
    <tr>  
      <td><%=image_tag item.product.image.url(:small) %></td>  
      <td><%= item.product.name %></td> 
      <td><%= item.quantity %></td>   
      <td class="item_price"><%= number_to_currency(item.total_price,:unit => '€') %></td>  
      
    </tr>  
  <% end %>  
  
  <tr class="total_line">  
    <td colspan="2">Total Price:</td>  
    <td class="total_cell"><%= number_to_currency(@cart.total_price,:unit => '€') %></td>  
  </tr>  
  
</table>  
  <%= link_to "Buy it now", new_order_path, class: "btn btn-primary", data: { no_turbolink: true }  %>